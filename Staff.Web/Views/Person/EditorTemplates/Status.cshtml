@model bool?

@{
        var selectList = new List<SelectListItem> {
        new SelectListItem {
            Text = "Все",
            Value = ""
        },
        new SelectListItem {
            Text = "Активен",
            Value = "true",
            Selected = Model.HasValue && Model.Value
        },
        new SelectListItem {
            Text = "Неактивен",
            Value = "false",
            Selected = Model.HasValue && !Model.Value
        }
    };


}

@(ViewData.ModelMetadata.IsNullableValueType
      ? Html.DropDownListFor( model => model, selectList )
      : Html.CheckBox( "", Model ?? false ))